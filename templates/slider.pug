extends ./base/layout

block title
  title Backbone-Forms jQueryUI slider example

block menu
  +menu('slider')

block extraheaders
  script(type="text/javascript" src="slider.js")
  script(type="text/javascript" src="slider-demo.js")

block content
  .container
    .row
      h3 jqueryui.slider
      .col-md-6
        #form(style="padding-bottom: 10px;")
      .col-md-6
        p
          span.focus.label.label-success.hidden focus
          span.blur.label.label-success.hidden blur
        p.change
          span.label.label-primary
