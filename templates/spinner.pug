extends ./base/layout

block title
  title Backbone-Forms jQueryUI spinner example

block menu
  +menu('spinner')

block extraheaders
  script(type="text/javascript" src="spinner.js")
  script(type="text/javascript" src="spinner-demo.js")

block content
  .container
    .row
      h3 jqueryui.spinner
      .col-md-6
        #form(style="padding-bottom: 10px;")
      .col-md-6
        p
          span.focus.label.label-success.hidden focus
          span.blur.label.label-success.hidden blur
        p.change
          span.label.label-primary
