extends ./base/layout

block title
  title Backbone-Forms jQueryUI checkboxes example

block menu
  +menu('checkboxes')

block extraheaders
  script(type="text/javascript" src="checkboxes.js")
  script(type="text/javascript" src="checkboxes-demo.js")

block content
  .container
    .row
      h3 jqueryui.checkboxes
      .col-md-6
        #form(style="padding-bottom: 10px;")
      .col-md-6
        p
          span.focus.label.label-success.hidden focus
          span.blur.label.label-success.hidden blur
        p.change
          span.label.label-primary
